{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node"]
    "esModuleInterop": true,
    "skipLibCheck": true, // This can help bypass type checking for declaration files
    "noImplicitAny": false
  },
"include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"]
}
